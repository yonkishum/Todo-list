<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Todos</h1>

  <table class="bordered responsive-table">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"><i class="fa fa-wrench" aria-hidden="true"></i>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.title %></td>
          <td><%= link_to 'Show', todo %></td>
          <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
          <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <a class="waves-effect waves-light btn white-text" <%= link_to 'Add a new To-Do'.html_safe, new_todo_path %></a>
</div>
